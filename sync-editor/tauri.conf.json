{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Sync Editor",
  "version": "0.1.0",
  "identifier": "com.universal-sync.editor",
  "build": {
    "frontendDist": "./ui/dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": {
      "script": "PATH=\"/opt/homebrew/bin:$PATH\" npm run dev",
      "cwd": "./ui"
    },
    "beforeBuildCommand": {
      "script": "PATH=\"/opt/homebrew/bin:$PATH\" npm run build",
      "cwd": "./ui"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Sync Editor",
        "width": 1024,
        "height": 768,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": [],
    "icon": []
  }
}
